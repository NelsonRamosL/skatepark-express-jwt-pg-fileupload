  <body>
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Administración</h2>
      <hr class="w-50" />

      <table class="table w-50 m-auto">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Foto</th>
            <th scope="col">Nombre</th>
            <th scope="col">Años de experiencia</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Estado</th>
          </tr>
        </thead>
        <tbody id="cuerpo">
         {{#each skaters}}
<tr>
<td>{{@index}}</td>
<td><img src="./img/{{this.foto}}" alt="{{this.nombre}}" width="100"></td>
<td>{{this.nombre}}</td>
<td>{{this.ano}}</td>
<td>{{this.especialidad}}</td>

<td><input type="checkbox" {{#if this.estado}} checked {{/if}} onclick="changeStatus({{this.id}}, this)"></td>
</tr>
{{/each}}
        </tbody>
      </table>
    </div>

<script>
const changeStatus = async(id, e) => {
const auth = e.checked
try {
await axios.put("/skatersAuth", {
id,auth })
alert(auth ? "Usuario habilitado" : "usuario deshabilitado");

} catch ({ response }){
const { data } = response;
const { error } = data;
alert(error);
}

}
</script>